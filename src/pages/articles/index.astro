---
import { getCollection } from 'astro:content';
import Base from '../../layouts/base.astro';

const articles = await getCollection('articles');
const sortedArticles = articles.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
const featuredArticles = sortedArticles.filter(article => article.data.featured);
const regularArticles = sortedArticles.filter(article => !article.data.featured);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}
---

<Base 
  title="Articles - Saigon Fencing Club"
  description="Expert fencing articles and guides from Saigon Fencing Club coaches. Learn techniques, training tips, and insights from professional fencing instructors."
  keywords="fencing articles, fencing techniques, fencing training, sword fighting guides, Ho Chi Minh City fencing"
>
  <!-- Navigation Header - Exact same as homepage -->
  <header class="sticky top-0 z-50 w-full border-b border-neutral-200 bg-white/90 backdrop-blur">
    <div class="container mx-auto flex max-w-7xl items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
      <a class="flex flex-shrink-0 items-center" href="/" aria-label="Saigon Fencing home">
        <img src="/legacy/logo_trans_web.png" alt="Saigon Fencing Club logo" class="h-16 w-auto max-h-20" width="80" height="80" loading="lazy" />
      </a>
      <nav class="ml-auto" aria-label="Primary navigation">
        <ul class="flex flex-wrap items-center justify-end gap-x-6 gap-y-3 text-[10px] font-medium uppercase tracking-[0.2em] text-neutral-600 md:text-[11px]" style="font-family: 'Poppins', Helvetica, Arial, sans-serif;">
          <li><a class="text-neutral-600 transition-colors duration-200 hover:!text-brand-gold" href="/">Home</a></li>
          <li><a class="text-neutral-600 transition-colors duration-200 hover:!text-brand-gold" href="/#About">About</a></li>
          <li><a class="text-neutral-600 transition-colors duration-200 hover:!text-brand-gold" href="/#Classes">Classes</a></li>
          <li><a class="text-neutral-600 transition-colors duration-200 hover:!text-brand-gold" href="/#Schedules">Schedules</a></li>
          <li><a class="text-neutral-600 transition-colors duration-200 hover:!text-brand-gold" href="/#Rankings">Rankings</a></li>
          <li><a class="text-neutral-600 transition-colors duration-200 hover:!text-brand-gold" href="/#Contact-Us">Contact Us</a></li>
          <li><a class="text-neutral-600 transition-colors duration-200 hover:!text-brand-gold" href="/articles">Articles</a></li>
        </ul>
      </nav>
    </div>
  </header> <!-- #main-header -->

  <div id="et-main-area">
    <div id="main-content">
      <div class="container mx-auto flex max-w-7xl px-4 sm:px-6 lg:px-8" style="padding-top: 100px;">
        <div id="content-area" class="clearfix w-full">
          <div id="left-area" class="w-full">
            
            <!-- Page Header -->
            <div class="et_pb_section et_pb_section_0 et_section_regular" style="padding: 80px 0 60px 0;">
              <div class="et_pb_row et_pb_row_0">
                <div class="et_pb_column et_pb_column_4_4 et_pb_column_0 et_pb_css_mix_blend_mode_passthrough et-last-child">
                  <div class="et_pb_module et_pb_text et_pb_text_0 et_pb_text_align_center et_pb_bg_layout_light">
                    <div class="et_pb_text_inner">
                      <h1 style="text-align: center; font-family: 'Poppins', Helvetica, Arial, sans-serif; color: #333; margin-bottom: 20px; font-size: 48px;">
                        <strong>FENCING <span style="color: #b39d64;">ARTICLES</span></strong>
                      </h1>
                      <div style="width: 80px; height: 3px; background: #b39d64; margin: 0 auto 30px auto;"></div>
                      <p style="text-align: center; font-size: 18px; color: #666; max-width: 600px; margin: 0 auto; line-height: 1.6;">
                        Expert insights, techniques, and guides from our professional coaches to help you master the art of fencing.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Featured Articles -->
            {featuredArticles.length > 0 && (
              <div class="et_pb_section et_pb_section_1 et_section_regular" style="background-color: #f8f9fa; padding: 80px 0;">
                <div class="et_pb_row et_pb_row_1">
                  <div class="et_pb_column et_pb_column_4_4 et_pb_column_1 et_pb_css_mix_blend_mode_passthrough et-last-child">
                    
                    <!-- Section Header with decorative line -->
                    <div class="et_pb_module et_pb_blurb et_pb_blurb_featured et_pb_text_align_center et_pb_blurb_position_top et_pb_bg_layout_light" style="text-align: center;">
                      <div class="et_pb_main_blurb_image" style="text-align: center; margin: 0 auto 20px auto; display: block;">
                        <span class="et_pb_image_wrap et_pb_only_image_mode_wrap" style="display: inline-block;">
                          <img decoding="async" width="80" height="27" src="/legacy/line-dec.png" alt="Decorative line separator" class="et-waypoint et_pb_animation_top et_pb_animation_top_tablet et_pb_animation_top_phone wp-image-88 et-animated" style="display: block; margin: 0 auto;">
                        </span>
                      </div>
                      <div class="et_pb_blurb_container">
                        <div class="et_pb_blurb_description">
                          <h2 style="text-align: center; font-family: 'Poppins', Helvetica, Arial, sans-serif; color: #333; margin-bottom: 40px; font-size: 36px;">
                            <strong>FEATURED <span style="color: #b39d64;">ARTICLES</span></strong>
                          </h2>
                        </div>
                      </div>
                    </div>
                    
                    <div class="articles-grid" style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 40px; margin-top: 40px;">
                      {featuredArticles.map((article) => (
                        <article class="article-card" style="background: white; border-radius: 15px; overflow: hidden; box-shadow: 0 8px 25px rgba(0,0,0,0.1); transition: all 0.3s ease; border: 1px solid #e5e5e5;">
                          {article.data.image && (
                            <div class="article-image" style={`height: 200px; background: url('${article.data.image}') center center; background-size: cover; position: relative; border-radius: 10px 10px 0 0;`}>
                              <div style="position: absolute; top: 15px; right: 15px; background: rgba(255,255,255,0.9); color: #b39d64; padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">FEATURED</div>
                              <div style="position: absolute; bottom: 0; left: 0; right: 0; background: linear-gradient(transparent, rgba(0,0,0,0.7)); height: 80px;"></div>
                            </div>
                          )}
                          <div class="article-content" style="padding: 30px;">
                            <div class="article-meta" style="margin-bottom: 15px;">
                              <span style="color: #b39d64; font-size: 13px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">
                                {formatDate(article.data.publishDate)}
                              </span>
                              <span style="color: #999; margin-left: 12px; font-size: 13px;">
                                by <strong style="color: #666;">{article.data.author}</strong>
                              </span>
                            </div>
                            <h3 style="margin-bottom: 15px; color: #333; font-family: 'Poppins', Helvetica, Arial, sans-serif; font-size: 22px; line-height: 1.3; font-weight: 600;">
                              <a href={`/articles/${article.slug}`} style="text-decoration: none; color: inherit; transition: color 0.3s ease;">
                                {article.data.title}
                              </a>
                            </h3>
                            <p style="color: #666; font-size: 15px; line-height: 1.6; margin-bottom: 20px;">
                              {article.data.description}
                            </p>
                            {article.data.tags && (
                              <div class="article-tags" style="margin-bottom: 25px;">
                                {article.data.tags.map((tag) => (
                                  <span class="tag" style="background: #f8f9fa; color: #666; padding: 6px 12px; border-radius: 20px; font-size: 11px; margin-right: 8px; margin-bottom: 5px; display: inline-block; text-transform: uppercase; letter-spacing: 0.5px; font-weight: 500;">
                                    {tag}
                                  </span>
                                ))}
                              </div>
                            )}
                            <a href={`/articles/${article.slug}`} class="read-more-btn" style="display: inline-flex; align-items: center; background: #b39d64; color: white; padding: 12px 24px; border-radius: 25px; text-decoration: none; font-weight: 600; font-size: 14px; transition: all 0.3s ease; text-transform: uppercase; letter-spacing: 0.5px;">
                              Read Article
                              <span style="margin-left: 8px;">â†’</span>
                            </a>
                          </div>
                        </article>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            )}

            <!-- All Articles -->
            <div class="et_pb_section et_pb_section_2 et_section_regular" style="padding: 80px 0;">
              <div class="et_pb_row et_pb_row_2">
                <div class="et_pb_column et_pb_column_4_4 et_pb_column_2 et_pb_css_mix_blend_mode_passthrough et-last-child">
                  
                  <!-- Section Header with decorative line -->
                  <div class="et_pb_module et_pb_blurb et_pb_blurb_all et_pb_text_align_center et_pb_blurb_position_top et_pb_bg_layout_light" style="text-align: center;">
                    <div class="et_pb_main_blurb_image" style="text-align: center; margin: 0 auto 20px auto; display: block;">
                      <span class="et_pb_image_wrap et_pb_only_image_mode_wrap" style="display: inline-block;">
                        <img decoding="async" width="80" height="27" src="/legacy/line-dec.png" alt="Decorative line separator" class="et-waypoint et_pb_animation_top et_pb_animation_top_tablet et_pb_animation_top_phone wp-image-88 et-animated" style="display: block; margin: 0 auto;">
                      </span>
                    </div>
                    <div class="et_pb_blurb_container">
                      <div class="et_pb_blurb_description">
                        <h2 style="text-align: center; font-family: 'Poppins', Helvetica, Arial, sans-serif; color: #333; margin-bottom: 40px; font-size: 36px;">
                          <strong>ALL <span style="color: #b39d64;">ARTICLES</span></strong>
                        </h2>
                      </div>
                    </div>
                  </div>
                  
                  <div class="articles-list" style="max-width: 900px; margin: 0 auto;">
                    {sortedArticles.map((article) => (
                      <article class="article-item" style="background: white; border-radius: 15px; padding: 40px; margin-bottom: 30px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); border: 1px solid #f0f0f0; transition: all 0.3s ease;">
                        <div class="article-meta" style="margin-bottom: 20px; display: flex; align-items: center; flex-wrap: wrap; gap: 15px;">
                          <span style="color: #b39d64; font-size: 13px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">
                            {formatDate(article.data.publishDate)}
                          </span>
                          <span style="color: #999; font-size: 13px;">
                            by <strong style="color: #666;">{article.data.author}</strong>
                          </span>
                          {article.data.featured && (
                            <span style="background: linear-gradient(135deg, #b39d64, #8a7a4f); color: white; padding: 6px 12px; border-radius: 20px; font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">
                              FEATURED
                            </span>
                          )}
                        </div>
                        <h3 style="margin-bottom: 20px; color: #333; font-family: 'Poppins', Helvetica, Arial, sans-serif; font-size: 28px; line-height: 1.3; font-weight: 600;">
                          <a href={`/articles/${article.slug}`} style="text-decoration: none; color: inherit; transition: color 0.3s ease;">
                            {article.data.title}
                          </a>
                        </h3>
                        <p style="color: #666; font-size: 16px; line-height: 1.7; margin-bottom: 25px;">
                          {article.data.description}
                        </p>
                        {article.data.tags && (
                          <div class="article-tags" style="margin-bottom: 30px;">
                            {article.data.tags.map((tag) => (
                              <span class="tag" style="background: #f8f9fa; color: #666; padding: 8px 16px; border-radius: 25px; font-size: 12px; margin-right: 10px; margin-bottom: 8px; display: inline-block; text-transform: uppercase; letter-spacing: 0.5px; font-weight: 500; border: 1px solid #e9ecef;">
                                {tag}
                              </span>
                            ))}
                          </div>
                        )}
                        <a href={`/articles/${article.slug}`} class="read-more-btn" style="display: inline-flex; align-items: center; color: #b39d64; text-decoration: none; font-weight: 600; font-size: 15px; transition: all 0.3s ease; text-transform: uppercase; letter-spacing: 0.5px;">
                          Read Full Article
                          <span style="margin-left: 10px; transition: transform 0.3s ease;">â†’</span>
                        </a>
                      </article>
                    ))}
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Brand gold color for hover effects */
    .hover\\:text-brand-gold:hover {
      color: #b39d64 !important;
    }

    /* Font styling to match homepage */
    body {
      font-family: 'Poppins', Helvetica, Arial, sans-serif !important;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Poppins', Helvetica, Arial, sans-serif !important;
    }
    
    p, span, div {
      font-family: 'Poppins', Helvetica, Arial, sans-serif;
    }

    /* Enhanced hover effects */
    .article-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 15px 35px rgba(0,0,0,0.15) !important;
    }
    
    .article-card h3 a:hover {
      color: #b39d64 !important;
    }
    
    .article-card .read-more-btn:hover {
      background: #8a7a4f !important;
      transform: translateY(-2px);
    }
    
    .article-item:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 30px rgba(0,0,0,0.12) !important;
    }
    
    .article-item h3 a:hover {
      color: #b39d64 !important;
    }
    
    .article-item .read-more-btn:hover {
      color: #8a7a4f !important;
    }
    
    .article-item .read-more-btn:hover span {
      transform: translateX(5px);
    }

    /* Responsive design */
    @media (max-width: 1024px) {
      .articles-grid {
        grid-template-columns: repeat(2, 1fr) !important;
        gap: 30px !important;
      }
    }

    @media (max-width: 768px) {
      .articles-grid {
        grid-template-columns: 1fr !important;
      }
      .container {
        padding-top: 40px !important;
      }
      
      .et_pb_section {
        padding: 40px 0 !important;
      }
      
      .article-card, .article-item {
        padding: 25px !important;
      }
      
      .article-card h3, .article-item h3 {
        font-size: 20px !important;
      }
      
      h1 {
        font-size: 36px !important;
      }
      
      h2 {
        font-size: 28px !important;
      }
      
      .article-meta {
        flex-direction: column !important;
        align-items: flex-start !important;
        gap: 8px !important;
      }
    }

    @media (max-width: 480px) {
      .container {
        padding-left: 20px !important;
        padding-right: 20px !important;
      }
      
      .article-card, .article-item {
        padding: 20px !important;
      }
      
      h1 {
        font-size: 28px !important;
      }
      
      h2 {
        font-size: 24px !important;
      }
    }
  </style>
</Base>